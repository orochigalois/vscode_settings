// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "cmd+y",
        "command": "redo",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+1",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<?php $0 ?>"
        }
    },
    {
        "key": "cmd+k cmd+2",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<?= $0; ?>"
        }
    },
    {
        "key": "cmd+k 3",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "/*bs4 breakpoint when screen width is in range [768px,1199px]*/\n@media screen and (min-width: \\$screen-md) and (max-width: \\$screen-lg-max) \n{\n\t$0\n}"
        }
    },
    {
        "key": "cmd+k cmd+4",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "/*bs4 breakpoint when screen width is in range [576px,767px]*/\n@media screen and (min-width: \\$screen-sm) and (max-width: \\$screen-sm-max) \n{\n\t$0\n}"
        }
    },
    {
        "key": "cmd+k cmd+5",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "@media screen and (max-width: 500px) \n{\n\t$0\n}"
        }
    },
    {
        "key": "cmd+k cmd+i",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "!important"
        }
    },
    {
        "key": "alt+cmd+;",
        "command": "bookmarks.clear",
        "when": "editorTextFocus"
    }
]