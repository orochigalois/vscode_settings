// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "cmd+y",
        "command": "redo",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k 1",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<?php $0 ?>"
        }
    },
    {
        "key": "cmd+k 2",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "<?= $0; ?>"
        }
    },
    {
        "key": "cmd+k 3",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "/*bs4 breakpoint when screen width in range [768px,1199px]*/\n@media screen and (min-width: \\$screen-md) and (max-width: \\$screen-lg-max) \n{\n\t$0\n}"
        }
    },
    {
        "key": "cmd+k 4",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "/*bs4 breakpoint when screen width in range [576px,767px]*/\n@media screen and (min-width: \\$screen-sm) and (max-width: \\$screen-sm-max) \n{\n\t$0\n}"
        }
    },
    {
        "key": "cmd+k 5",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "/*bs4 breakpoint when screen width in range [0,575px]*/\n@media screen and (max-width: \\$screen-xs-max) \n{\n\t$0\n}"
        }
    }
]